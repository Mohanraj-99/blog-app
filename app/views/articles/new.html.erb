<% if @article.errors.any? %>
<h2> The following error prevented the method to create article </h2> 
<% @article.errors.full_messages.each do |err|%>
<%= err %>
<br>
<% end %>
<% end %>

<%= form_for @article do |f| %>
<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :description %>
<%= f.text_area  :description %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>